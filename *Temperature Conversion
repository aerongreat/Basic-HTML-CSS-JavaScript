  <form>
    <h1>TEMPERATURE<span> CONVERSION</span>
      <br>üå°Ô∏è<br>
    </h1>
    <input type="number" id="inputNum" value="0">
    <br>

    <input type="radio" id="fahrenheit" name="unit">
    <label for="fahrenheit">Celcius ‚Üí Fahrenheit</label><br>
    
    <input type="radio" id="celsius" name="unit"> 
    <label for="celsius">Fahrenheit ‚Üí Celcius</label>
    <br>

    <button type="button" onclick="toConvert()">CONVERT</button>
    <p id="result"></p>
  </form>
 
<script>
 const inputNum = document.getElementById("inputNum");
const fahrenheit = document.getElementById("fahrenheit");
const celsius = document.getElementById("celsius");
const result = document.getElementById("result");
let temp;

function toConvert() {
  if (fahrenheit.checked){
    temp = Number(inputNum.value);
    temp = temp * 9 / 5 + 32;
    result.innerHTML = `${Math.round(temp)}¬∞F`;
  } else if 
  (celsius.checked) {
    temp = Number(inputNum.value);
    temp = (temp - 32) * (5/9);
    result.innerHTML = `${Math.round(temp)}¬∞C`;
  }else {
    result.innerHTML = 'Please select a temperature type';
  }
} 
</script>
